<div class="small-5 columns small-centered">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label "username"%>
        <%= f.text_field "username" %>

        <%= f.label "password"%>
        <%= f.password_field "password" %>

        <%= f.submit "Login", class: "button expand" %>
    <% end %>
</div>
